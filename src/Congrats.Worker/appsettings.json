{
  "CongratulatoryService": {
    "Excel": {
      "FilePath": "samples/people.xlsx",
      "SheetName": "People",
      "Optional": false
    },
    "Mail": {
      "From": "hrbot@example.com",
      "DisplayName": "HR Bot",
      "SmtpHost": "smtp.example.com",
      "Port": 587,
      "UseSsl": true,
      "Username": "smtp-user",
      "Password": "smtp-password",
      "EnableDryRunAttachments": true
    },
    "Templates": {
      "DefaultTemplate": "classic.en",
      "BasePath": "Templating/Templates",
      "CompanyName": "Contoso",
      "Signature": "People Operations",
      "CardImageUrl": "https://example.com/card.png"
    },
    "Scheduler": {
      "Cron": "0 0 8 * * ?",
      "TimeZone": "Asia/Kolkata",
      "Enabled": true
    },
    "Rendering": {
      "Enabled": false,
      "OutputDirectory": "out/cards",
      "Format": "html"
    },
    "DryRun": {
      "Enabled": true,
      "OutputDirectory": "out/dry-run"
    },
    "SentLog": {
      "StoragePath": "data/sent-log.json",
      "Enabled": true
    },
    "Notifications": {
      "SendSummaryEmail": false,
      "SummaryRecipient": "hr-team@example.com"
    },
    "Occasions": {
      "LeapDayPolicy": "Feb28"
    }
  }
}
